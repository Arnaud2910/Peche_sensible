<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoissonsPreviewActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/apple"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Nom poisson"
        android:layout_marginTop="70dp"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/text_taille_mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="173dp"
        android:text="Taille minimale :  "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/taille_mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/text_taille_mini"
        android:text="taille mini"
        android:layout_marginTop="173dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text_quantite_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="250dp"
        android:text="QuantitÃ© max : "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/quantite_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/text_quantite_max"
        android:text=""
        android:layout_marginTop="250dp"
        android:textSize="25dp" />

</RelativeLayout>