<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#145DA0"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_bienvenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue "
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/activity_main_nom_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:layout_toRightOf="@+id/text_bienvenue"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_above="@id/activity_main_BDD_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_peche_sensible" />

        <Button
            android:id="@+id/activity_main_BDD_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/activity_main_profil_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/my_button_bg"
            android:text="Accéder aux informations"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_profil_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/activity_main_gerer_peche_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/my_button_bg"
            android:text="Gérer son profil"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_gerer_peche_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/activity_main_conseil_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/my_button_bg"
            android:text="Gérer ses pêches"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_conseil_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/my_button_bg"
            android:text="Conseils et reglementation"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>